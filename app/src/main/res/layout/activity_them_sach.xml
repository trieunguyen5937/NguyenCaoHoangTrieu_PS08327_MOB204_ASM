<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemSachActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D2691E"
        android:elevation="4dp"
        android:gravity="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:text="Thêm sách"
            android:textColor="#fff"
            android:textSize="20dp" />

    </android.support.v7.widget.Toolbar>

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_maSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Mã sách"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="8dp"
        android:text="Loại sách" />

    <Spinner
        android:id="@+id/sp_loaiSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

    </Spinner>

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_tenSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Tên sách"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_tacGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Tác giả"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_NXB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhà xuất bản"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_giaBia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Giá bìa"
        android:inputType="number"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_soLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Số lượng"
        android:inputType="number"
        android:textSize="18dp" />

</LinearLayout>