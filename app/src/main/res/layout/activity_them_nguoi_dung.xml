<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemNguoiDungActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D2691E"
        android:elevation="4dp"
        android:gravity="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:text="Thêm người dùng"
            android:textColor="#fff"
            android:textSize="20dp" />

    </android.support.v7.widget.Toolbar>

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_tenDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Tên đăng nhập"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_matKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Mật khẩu"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_xacNhanMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Xác nhận mật khẩu"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_hoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Họ tên"
        android:textSize="18dp" />

    <com.example.trieunguyen.ps08327_mob204_asm.utilities.ClearableEditText
        android:id="@+id/et_soDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Số điện thoại"
        android:textSize="18dp" />

</LinearLayout>